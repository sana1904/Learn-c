/***
To check whether a number is odd or even using ternary operator
Ex: Input is 34. Output is even
Ex: Input is 419. Output is odd
Author: Sana
*/

#include<stdio.h>
int main()
{
	int num;
	printf(“Enter a number”);
	scanf(“%d”, &num);
	//to see if the number is perfectly divisible by 2
	    if(num%2==0)
		     printf(‘%d is even”,num);
	    else	
		     printf(“%d is odd”);
 	return 0;
}
