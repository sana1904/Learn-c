/***
To check whether a given integer is positive even, negative even, positive odd or negative odd
Ex: Input is -8, Output is negative even
Ex: Input is -67, Output is negative odd
Ex: Input is 94, Output is positive even
Author- Sana
*/

#include<stdio.h>
int main()
{
	int x;
	printf("Input an integer: ");
	scanf("%d", &x);

	
	   if(x == 0){
			printf("Positive\n");
		} 
		else if(x < 0 && (x%2) != 0) 
		{
			printf("Negative Odd\n");
		} 
		else if(x < 0 && (x%2) == 0) 
		{
			printf("Negative Even\n");
		} 
		else if(x > 0 && (x%2) != 0)
		{
printf("Positive Odd\n");
		} 
		else if(x > 0 && (x%2) == 0) 
		{
			printf("Positive Even\n");
		} 	
	
	return 0;
}
